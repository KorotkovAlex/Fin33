<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreenActivity"
    android:background="@color/colorDollar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewES"
        android:text="@string/icon_heart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:textColor="@color/colorText"
        android:textSize="100sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ошибка"
        android:id="@+id/textView6"
        android:layout_below="@+id/textViewES"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:textColor="@color/colorText"/>

    <RelativeLayout
        android:id="@+id/relativeLayoutReset"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/relativeLayoutDemo"
        android:layout_toEndOf="@+id/textView6"
        android:translationZ="4dp"
        android:background="@color/colorNonBest"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Reset"
            android:id="@+id/textView9"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorDollar"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@id/relativeLayoutDemo"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView6"
        android:layout_toStartOf="@+id/textView6"
        android:layout_marginTop="118dp"
        android:translationZ="4dp"
        android:background="@color/colorNonBest"
        android:clickable="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Demo"
            android:id="@+id/textView10"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/colorDollar"
            />

    </RelativeLayout>

</RelativeLayout>

